# ========================================
# REQUIRED - Google OAuth Configuration
# ========================================
# Get this from Google Cloud Console > APIs & Services > Credentials
REACT_APP_GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# ========================================
# REQUIRED - API Configuration
# ========================================
# Backend API server URL
REACT_APP_API_URL="http://localhost:3001"

# ========================================
# OPTIONAL - WebSocket Configuration
# ========================================
# WebSocket server URL (uncomment if using WebSockets)
# REACT_APP_WS_URL="ws://localhost:3001"

# ========================================
# OPTIONAL - Authentication Endpoints
# ========================================
# Override default authentication endpoints if needed
# REACT_APP_AUTH_LOGIN="/api/auth/google"
# REACT_APP_AUTH_LOGOUT="/api/logout"
# REACT_APP_AUTH_SWITCH="/api/switch-tenant"
# REACT_APP_AUTH_REFRESH="/api/refresh-token"
# REACT_APP_REDIRECT_URI="http://localhost:3000/auth/callback"

# ========================================
# OPTIONAL - Data Endpoints
# ========================================
# Override default data endpoints if needed
# REACT_APP_ENDPOINT_ADMIN="/api/data/admin/settings"
# REACT_APP_ENDPOINT_REPORTS="/api/data/reports"
# REACT_APP_ENDPOINT_AUDIT="/api/audit/logs"

# ========================================
# OPTIONAL - Third-Party Integrations
# ========================================
# Error tracking and analytics (uncomment if using)
# REACT_APP_SENTRY_DSN="your-sentry-dsn-here"
# REACT_APP_ANALYTICS_ID="your-analytics-id-here"

# ========================================
# OPTIONAL - UI Links
# ========================================
# Custom URLs for legal pages (uncomment if using)
# REACT_APP_PRIVACY_URL="/privacy"
# REACT_APP_TERMS_URL="/terms"
# REACT_APP_SUPPORT_URL="/support"